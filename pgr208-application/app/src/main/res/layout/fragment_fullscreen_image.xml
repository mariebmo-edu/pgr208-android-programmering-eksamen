<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photo_view_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/overlayColor"
    tools:context=".view.fragment.FullscreenImage">


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerCrop"
        android:theme="@style/Theme.AppCompat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/photo_view_close"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:contentDescription="Close Fullscreen Image"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:screenReaderFocusable="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:textAlignment="center"
        app:cornerRadius="100dp"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconPadding="0dp"
        app:iconTint="#FFFFFF"
        app:iconTintMode="src_in"
        app:layout_constraintEnd_toEndOf="@+id/photo_view"
        app:layout_constraintTop_toTopOf="@+id/photo_view" />

</androidx.constraintlayout.widget.ConstraintLayout>

