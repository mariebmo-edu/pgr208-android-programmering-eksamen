<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="resultItem"
            type="no.kristiania.reverseimagesearch.model.entity.ResultImage" />
    </data>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:maxHeight="100dp"
            android:contentDescription="@string/image_of_search_result"
            tools:srcCompat="@tools:sample/avatars" />

        <CheckBox
            android:id="@+id/save_result"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="?attr/overlayColor"
            android:backgroundTintMode="multiply"
            android:buttonTint="@color/lm_primary_color"
            android:checked="false"
            android:minWidth="48dp"
            android:minHeight="48dp" />


    </androidx.cardview.widget.CardView>
</layout>